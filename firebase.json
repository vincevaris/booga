{
    "hosting": {
        "public": "build",

        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],

        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],

        "trailingSlash": false
    },
    "functions": [
    {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint"
        ]
    }
  ]
}
